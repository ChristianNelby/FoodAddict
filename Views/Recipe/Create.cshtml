@model RecipeViewModel
@using FoodAddict.Models.RecipeViewModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="p-5 text-center">Create New Recipe</h1>


<form asp-action="Create" asp-controller="Recipe" method="post">

    <div class="row justify-content-center">
        <div class="col-10 form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-10 form-group">
            <label asp-for="MealSize" class="control-label"></label>
            <input asp-for="MealSize" class="form-control" />
            <span asp-validation-for="MealSize" class="text-danger"></span>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-10 form-group">
            <label asp-for="MealPreparationTime" class="control-label"></label>
            <input asp-for="MealPreparationTime" class="form-control" />
            <span asp-validation-for="MealPreparationTime" class="text-danger"></span>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-10 form-group">
            <label asp-for="Directions" class="control-label"></label>
            <textarea asp-for="Directions" class="form-control"></textarea>
            <span asp-validation-for="Directions" class="text-danger"></span>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-10 form-group">
            <label asp-for="UrlImage" class="control-label"></label>
            <input asp-for="UrlImage" class="form-control" />
            <span asp-validation-for="UrlImage" class="text-danger"></span>
        </div>
    </div>

    <div id="elementHolder" class="mb-5">
        
            <div class="row justify-content-center" id="divRowId 0">
                <div class="col-2" id="divNameId 0">
                    <label id="labelNameId 0" asp-for="@Model.Ingredients[0].Name" class="control-label"></label>
                    <input id="inputNameId 0" asp-for="@Model.Ingredients[0].Name" class="form-control" />
                </div>

                <div class="col-2" id="divAmountId 0">
                    <label id="labelAmountId 0" asp-for="@Model.Ingredients[0].Amount" class="control-label"></label>
                    <input id="inputAmountId 0" asp-for="@Model.Ingredients[0].Amount" class="form-control" />
                </div>

                <div class="col-2" id="divUnitId 0">
                    <label id="labelUnitId 0" asp-for="@Model.Ingredients[0].Unit" class="control-label"></label>
                    <input id="inputUnitId 0" asp-for="@Model.Ingredients[0].Unit" class="form-control" />
                </div>

                <div class="col-2" id="divPreparationsId 0">
                    <label id="labelPreparationsId 0" asp-for="@Model.Ingredients[0].Preparations" class="control-label"></label>
                    <input id="inputPreparationsId 0" asp-for="@Model.Ingredients[0].Preparations  " class="form-control" />
                </div>

                <div class="col-1 mt-2" id="divButtonId 0">
                    <label></label>
                    <button type="button" id="buttonId 0" class="btn btn-danger" onclick="RemoveElement(this.id)">Delete</button>
                </div>
            </div>
    </div>


    <div class="text-center p-2">
        <button type="button" class="btn btn-lg btn-primary" onclick="AddIngredient();">Add Ingredient</button>
    </div>

    <div class="text-center p-2">
        <button class="btn btn-lg btn-primary" type="submit">Save</button>
    </div>

</form>






